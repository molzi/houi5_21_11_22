<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="at.clouddna.training00.FioriDeepDive.controller.Main" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="{i18n>main.title}" id="main_page">
		<content>
			<Table id="main_table" headerText="{i18n>main.table.title}" items="{/customers}">
				<columns>
					<Column id="main_column_customerid">
						<Text text="{i18n>app.customerid}"/>
					</Column>
					<Column id="main_column_firstname">
						<Text text="{i18n>app.firstname}"/>
					</Column>
					<Column id="main_column_lastname">
						<Text text="{i18n>app.lastname}"/>
					</Column>
					<Column id="main_column_title" minScreenWidth="Tablet">
						<Text text="{i18n>app.title}"/>
					</Column>
					<Column id="main_column_gender" minScreenWidth="Tablet">
						<Text text="{i18n>app.gender}"/>
					</Column>
					<Column id="main_column_email" demandPopin="true" minScreenWidth="Desktop">
						<Text text="{i18n>app.email}"/>
					</Column>
					<Column id="main_column_phone">
						<Text text="{i18n>app.phone}"/>
					</Column>
					<Column id="main_column_website">
						<Text text="{i18n>app.website}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier title="{customerid}"/>
							<Text text="{firstname}"/>
							<Text text="{lastname}"/>
							<Text text="{title}"/>
							<Text text="{gender}"/>
							<Text text="{email}"/>
							<Text text="{phone}"/>
							<Link text="{website}" href="{website}" target="_blank"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>